<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".reviewComplaint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_marginBottom="4dp"
            android:id="@+id/datenTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Date and Time of Complaint:"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginBottom="4dp"
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/hostelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="Hostel : "
            android:textColor="@color/white" />

        <TextView
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:id="@+id/roomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Room Number : "
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:text="Preferred Date and Time : #1"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp"
            android:textColor="@color/white">

            <TextView
                android:layout_marginBottom="4dp"
                android:id="@+id/datePrefTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="Date : "
                android:textColor="@color/white" />

            <TextView
                android:layout_marginBottom="4dp"
                android:id="@+id/timePrefTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Time : "
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Preferred Date and Time : #2"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColor="@color/white">

            <TextView
                android:id="@+id/datePrefTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="Date : "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/timePrefTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Time : "
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="4dp"
            android:id="@+id/describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Description : "
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/resolvedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="@color/green"
            android:elevation="4dp"
            android:padding="8dp"
            android:src="@drawable/ic_action_name"
            android:textAllCaps="false" />

        <ImageButton
            android:id="@+id/notResolvedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="@color/red"
            android:elevation="4dp"
            android:padding="8dp"
            android:src="@drawable/ic_action_cancel"
            android:textAllCaps="false" />

        <ImageButton

            android:id="@+id/missedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="@color/blue"
            android:elevation="4dp"
            android:padding="8dp"
            android:src="@drawable/ic_action_missed"
            android:textAllCaps="false" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>